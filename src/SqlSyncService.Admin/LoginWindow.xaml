<Window x:Class="SqlSyncService.Admin.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SqlSyncService - Admin Login"
        Height="450" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="400" MinWidth="500"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Border Background="{StaticResource SurfaceBrush}" 
                CornerRadius="8" 
                Margin="40"
                Padding="50">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
            </Border.Effect>
            
            <StackPanel VerticalAlignment="Center">
                <!-- Logo/Title -->
                <TextBlock Text="ðŸ” Admin Login" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="SqlSyncService Administration" 
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Error Message -->
                <Border x:Name="ErrorPanel" 
                        Background="#fee2e2" 
                        BorderBrush="#fca5a5"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,0,0,16"
                        Visibility="Collapsed">
                    <TextBlock x:Name="ErrorText" 
                               Text="Invalid passphrase"
                               Foreground="#991b1b"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Passphrase Input -->
                <Label Content="Admin Passphrase:" 
                       FontSize="14"
                       Margin="0,10,0,5"/>
                <PasswordBox x:Name="PassphraseBox" 
                            Margin="0,0,0,30"
                            Padding="12"
                            FontSize="16"
                            Height="50"
                            Focusable="True"
                            IsTabStop="True"
                            TabIndex="0"
                            KeyDown="PassphraseBox_KeyDown"/>

                <!-- Login Button -->
                <Button Content="Login" 
                        Style="{StaticResource PrimaryButton}"
                        Click="LoginButton_Click"
                        FontSize="16"
                        Height="50"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
